<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left">
            <TextView
                android:id="@+id/edit"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <TextView
                android:id="@+id/tdivision"
                android:layout_width="120dp"
                android:layout_height="wrap_content" />
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/reporte"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:hint="Escribe tu reporte"
            android:textSize="16sp"
           android:gravity="top"/>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_alignParentTop="true"
                    android:id="@+id/imgMostrar"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:foregroundGravity="top"
                    android:layout_marginLeft="20dp"/>
                <ImageView
                    android:id="@+id/c_1"
                    android:layout_marginLeft="140dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/redx"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_alignParentTop="true"
                    android:id="@+id/imgMostrarr"
                    android:layout_width="160dp"
                    android:layout_marginLeft="25dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"/>
                <ImageView
                    android:id="@+id/c_2"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="140dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/redx"/>


            </RelativeLayout>
            </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">


        <Spinner
            android:id="@+id/spinner"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:entries="@array/Reporte" />

        <Button
            android:id="@+id/btn_camara"
            style="@style/AlertDialog.AppCompat.Light"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:drawableLeft="@android:drawable/ic_menu_camera"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/buttonn"
            style="@style/AlertDialog.AppCompat.Light"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="12dp"
            android:drawableLeft="@android:drawable/ic_menu_mylocation"
            android:textColor="@color/black"
            android:text="UbicaciÃ³n"
            android:textSize="10sp" />

        <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviar"
            android:textColor="@color/black"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
